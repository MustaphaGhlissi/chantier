{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
    <h1>Utilisateurs</h1>

    <div class='text-right mb-3'>
        <a href="{{ path('utilisateur_new') }}" class='btn btn-sm btn-primary'>
            <i class='fa fa-plus-circle'></i> Ajouter
        </a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Matricule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.matricule }}</td>
                <td>
                    <a href="{{ path('utilisateur_show', {'id': utilisateur.id}) }}" class='btn btn-secondary btn-sm'>
                        <i class='fa fa-eye'></i>
                    </a>
                    <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}" class='btn btn-success btn-sm'>
                        <i class='fa fa-edit'></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun utilisateur.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
