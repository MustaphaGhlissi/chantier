{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>{{ utilisateur.prenom|capitalize ~ ' ' ~  utilisateur.nom|upper }}</h1>

    <div class='text-right'>
        <ul class='list-unstyled d-inline-flex flex-row align-items-center'>
            <li class='mx-1'>
                <a href="{{ path('utilisateur_index') }}">
                    <i class='fa fa-arrow-left'></i> Retour</a>
            </li>
            <li class='mx-1'>
                <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}" class='btn btn-success btn-sm'>
                   <i class='fa fa-edit'></i> Modifier
                </a>
            </li>
            <li class='ml-1'>
                {{ include('utilisateur/_delete_form.html.twig') }}
            </li>
        </ul>
    </div>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ utilisateur.matricule }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
